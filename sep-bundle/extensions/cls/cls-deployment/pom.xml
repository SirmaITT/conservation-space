<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.sirma.itt.emf.cls</groupId>
		<artifactId>cls</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<artifactId>cls-deployment</artifactId>
	<packaging>war</packaging>

	<dependencies>

		<!-- CLS dependencies -->
		<dependency>
			<groupId>com.sirma.itt.emf.cls</groupId>
			<artifactId>cls-impl</artifactId>
		</dependency>

		<dependency>
			<groupId>com.sirma.itt.emf.cls</groupId>
			<artifactId>cls-web</artifactId>
		</dependency>

		<!-- CMF dependencies -->

		<!-- EMF dependencies -->

		<dependency>
			<groupId>com.sirma.itt.emf</groupId>
			<artifactId>emf-cache-infinispan</artifactId>
		</dependency>
	</dependencies>

	<build>
		<!-- Set the name of the war, used as the context root when the app is
			deployed -->
		<!-- <finalName>${project.artifactId}</finalName> -->
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<!-- Java EE 6 doesn't require web.xml, Maven needs to catch up! -->
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<!-- @{groupId}@-@{artifactId}@-@{baseVersion}@@{dashClassifier?}@.@{extension}@ -->
					<outputFileNameMapping>@{groupId}@-@{artifactId}@.@{extension}@</outputFileNameMapping>
					<archive>
						<manifestEntries>
							<Release-Version>${emf.release.version}</Release-Version>
							<Build-Time>${maven.build.timestamp}</Build-Time>
							<Svn-Revision>${SVN_REVISION}</Svn-Revision>
							<Build-Number>${BUILD_NUMBER}</Build-Number>
							<Build-Id>${BUILD_ID}</Build-Id>
							<Build-Tag>${BUILD_TAG}</Build-Tag>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>

		</plugins>
	</build>

</project>