<?xml version="1.0"?>
<definition id="userDefinition" type="user">
	<fields>
		<field name="status" 		type="an..10" uri="emf:status" codelist="CL11" />
	    <field name="createdOn" 	type="dateTime" label="userDefinition.created-on" uri="emf:createdOn"/>
	    <field name="createdBy" 	type="an..35" 	label="userDefinition.created-from" uri="emf:createdBy"><control id="USER"/></field>
	    <field name="modifiedOn"  	type="dateTime" label="userDefinition.modified-on" uri="emf:modifiedOn"/>
	    <field name="modifiedBy"    type="an..35" 	label="userDefinition.modified-from" uri="emf:modifiedBy"><control id="USER"/></field>
	    <field name="emf:isDeleted" type="boolean"  displayType="system" uri="emf:isDeleted" dmsType="FORBIDDEN"><value>false</value></field>

	    <field name="firstName" 	type="an..35" 	label="userDefinition.firstName" uri="ptop:firstName" />
	    <field name="lastName" 		type="an..35" 	label="userDefinition.lastName" uri="ptop:lastName"/>
	    <field name="userId" 		type="an..35" 	label="userDefinition.userId" uri="ptop:title" />
	    <field name="avatar" 		type="an..200" 	label="userDefinition.avatar" uri="emf:avatar" />
	    <field name="email" 		type="an..50" 	label="userDefinition.email" uri="emf:email" />
	    <field name="jobtitle" 		type="an..50" 	label="userDefinition.jobtitle" uri="ptop:hasPosition" />
	</fields>

    <transitions>
		<transition id="editDetails" label="userDefinition.editDetails.btn.title" eventId="editDetails" purpose="action" />
		<transition id="delete" label="userDefinition.delete.btn.title" eventId="delete" purpose="action" immediate="true" confirmation="userDefinition.confirm" />
	</transitions>

	<stateTransitions>
		<stateTransition from="*" transition="createUser" to="IN_PROGRESS"/>

		<stateTransition from="IN_PROGRESS" transition="editDetails" to="IN_PROGRESS"/>
		<stateTransition from="IN_PROGRESS" transition="delete" to="DELETED" />

		<stateTransition from="*" transition="delete" to="DELETED" />
	</stateTransitions>
	<labels>
		<label id="userDefinition.created-on">
			<value lang="bg">Дата на създаване</value>
			<value lang="en">Created On</value>
		</label>
		<label id="userDefinition.created-from">
			<value lang="bg">Създаден от</value>
			<value lang="en">Created By</value>
		</label>
		<label id="userDefiniton.modified-on">
			<value lang="bg">Дата на актуализация</value>
			<value lang="en">Мodified Оn</value>
		</label>
		<label id="userDefinition.modified-from">
			<value lang="bg">Актуализиран от</value>
			<value lang="en">Modified By</value>
		</label>
		<label id="userDefinition.firstName">
			<value lang="bg">Актуализиран от</value>
			<value lang="en">First name</value>
		</label>
		<label id="userDefinition.lastName">
			<value lang="bg">Актуализиран от</value>
			<value lang="en">Last name</value>
		</label>
		<label id="userDefinition.userId">
			<value lang="bg">Номер на потребител</value>
			<value lang="en">User ID</value>
		</label>
		<label id="userDefinition.avatar">
			<value lang="bg">Аватар</value>
			<value lang="en">Avatar</value>
		</label>
		<label id="userDefinition.email">
			<value lang="bg">Имейл</value>
			<value lang="en">Email</value>
		</label>
		<label id="userDefinition.jobtitle">
			<value lang="bg">Длъжност</value>
			<value lang="en">Job Title</value>
		</label>
		<label id="userDefinition.editDetails.btn.title">
			<value lang="bg">Редактирай детайли</value>
			<value lang="en">Edit details</value>
		</label>
		<label id="userDefinition.delete.btn.title">
			<value lang="bg">Изтрий</value>
			<value lang="en">Delete</value>
		</label>
	</labels>

</definition>