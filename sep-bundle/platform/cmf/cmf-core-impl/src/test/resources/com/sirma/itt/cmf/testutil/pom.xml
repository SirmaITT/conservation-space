<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>integration-test</artifactId>
	<packaging>war</packaging>

	<parent>
		<groupId>com.sirma.itt.cmf</groupId>
		<artifactId>cmf</artifactId>
		<version>1.7.0-SNAPSHOT</version>
	</parent>

	<properties>
		<emf-sso.version>1.7.0-SNAPSHOT</emf-sso.version>
		<emf-cache-infinispan.version>1.1.2</emf-cache-infinispan.version>
		<cmf.version>1.7.0-SNAPSHOT</cmf.version>
		<emf.version>1.7.0-SNAPSHOT</emf.version>
		<arquillian.version>1.1.3.Final</arquillian.version>
		<version.jacoco>0.6.4.201312101107</version.jacoco>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.jboss.arquillian</groupId>
				<artifactId>arquillian-bom</artifactId>
				<version>${arquillian.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>org.jboss.arquillian.testng</groupId>
			<artifactId>arquillian-testng-container</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.shrinkwrap.resolver</groupId>
			<artifactId>shrinkwrap-resolver-impl-maven</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.spec</groupId>
			<artifactId>jboss-javaee-6.0</artifactId>
			<version>1.0.0.Final</version>
			<type>pom</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.arquillian.protocol</groupId>
			<artifactId>arquillian-protocol-servlet</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- CMF modules -->
		<dependency>
			<groupId>com.sirma.itt.cmf</groupId>
			<artifactId>cmf-core-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.sirma.itt.cmf</groupId>
			<artifactId>cmf-core-impl</artifactId>
		</dependency>
		<dependency>
			<groupId>com.sirma.itt.emf</groupId>
			<artifactId>emf-core-impl</artifactId>
		</dependency>
		<dependency>
			<groupId>com.sirma.itt.emf</groupId>
			<artifactId>emf-core-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.sirma.itt.emf</groupId>
			<artifactId>emf-core-web</artifactId>
		</dependency>
		<dependency>
			<groupId>com.sirma.itt.emf</groupId>
			<artifactId>emf-cache-infinispan</artifactId>
			<version>${emf-cache-infinispan.version}</version>
		</dependency>
		<dependency>
			<groupId>com.sirma.itt.seip</groupId>
			<artifactId>emf-sso-saml</artifactId>
			<version>${emf-sso.version}</version>
		</dependency>
		<dependency>
			<groupId>com.sirma</groupId>
			<artifactId>codelist-utils</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>

		<dependency>
			<groupId>org.liquibase</groupId>
			<artifactId>liquibase-core</artifactId>
			<version>2.0.5-patched</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.persistence</groupId>
			<artifactId>org.eclipse.persistence.core</artifactId>
			<version>2.5.1-cc-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.persistence</groupId>
			<artifactId>org.eclipse.persistence.moxy</artifactId>
			<version>2.5.1-cc-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.persistence</groupId>
			<artifactId>org.eclipse.persistence.antlr</artifactId>
			<version>2.5.1-cc-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.persistence</groupId>
			<artifactId>org.eclipse.persistence.asm</artifactId>
			<version>2.5.1-cc-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.bouncycastle</groupId>
			<artifactId>bcprov-jdk15</artifactId>
			<version>1.46-cc-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
	</dependencies>

	<build>

		<!-- Set the name of the war, used as the context root when the app is deployed -->
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<!-- <plugin> <groupId>org.apache.maven.plugins</groupId> <artifactId>maven-jar-plugin</artifactId> <executions> <execution> <id>make-a-jar</id> <phase>compile</phase>
				<goals> <goal>jar</goal> </goals> </execution> </executions> </plugin> -->
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<!-- Java EE 6 doesn't require web.xml, Maven needs to catch up! -->
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<outputFileNameMapping>@{groupId}@-@{artifactId}@.@{extension}@</outputFileNameMapping>
					<archive>
						<manifestEntries>
							<Release-Version>${emf.release.version}</Release-Version>
							<Build-Time>${maven.build.timestamp}</Build-Time>
							<Svn-Revision>${SVN_REVISION}</Svn-Revision>
							<Build-Number>${BUILD_NUMBER}</Build-Number>
							<Build-Id>${BUILD_ID}</Build-Id>
							<Build-Tag>${BUILD_TAG}</Build-Tag>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>