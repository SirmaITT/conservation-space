<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
    http://xmlns.jcp.org/xml/ns/persistence
    http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="CoreDatabase" transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/system.tenant</jta-data-source>
		<jar-file>./lib/com.sirma.itt.seip.db-db-core.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-tenant-impl.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-configuration-db.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-task-schedule-core.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-domain-model-core.jar</jar-file>

		<properties>
			<!-- Loading using external configuration for hibernate. The file should 
				be located in the root directory if the classpath -->
			<property name="hibernate.ejb.cfgfile" value="core.hibernate.cfg.xml" />
		</properties>
	</persistence-unit>
	
	<persistence-unit name="SEIP-Primary" transaction-type="JTA">
		<jar-file>./lib/com.sirma.itt.seip.db-db-core.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.emf-emf-core-impl.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.cmf-cmf-core-impl.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.pm-pm-core-impl.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.pm-pm-schedule-core.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.objects-objects-impl.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.emf.cls-cls-api.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-domain-model-core.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-definition-core.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-instance-core.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-instance-lock.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-instance-templates-impl.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-user-management.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-user-management-permissions.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-task-schedule-core.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-mail-sender.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-content-core.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-content-thumbnail.jar</jar-file>
		<jar-file>./lib/com.sirma.itt.seip-role-management.jar</jar-file>
		
		<properties>
			<!-- Loading using external configuration for hibernate. The file should 
				be located in the root directory if the classpath -->
			<property name="hibernate.ejb.cfgfile" value="hibernate.cfg.xml" />
		</properties>
	</persistence-unit>
	
	<!-- Declaring the persistence unit for the audit log. -->
	<persistence-unit name="seip-auditlog">
	<!-- datasource will be resolved from hibernate configuration -->
		<jar-file>./lib/com.sirma.itt.emf.audit-seip-audit-api.jar</jar-file>
		<properties>
			<!-- Loading using external configuration for hibernate. The file should 
				be located in the root directory if the classpath. -->
			<property name="hibernate.ejb.cfgfile" value="audit.hibernate.cfg.xml" />
		</properties>

	</persistence-unit>
</persistence>