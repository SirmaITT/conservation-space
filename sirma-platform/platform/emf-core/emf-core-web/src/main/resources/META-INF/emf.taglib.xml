<facelet-taglib xmlns="http://xmlns.jcp.org/xml/ns/javaee">
    <namespace>http://com.sirma.itt.emf</namespace>
    <function>
        <function-name>escapeJS</function-name>
        <function-class>org.apache.commons.lang3.StringEscapeUtils</function-class>
        <function-signature>java.lang.String escapeEcmaScript(java.lang.String)</function-signature>
    </function>
    <tag>
        <tag-name>panel</tag-name>
        <component>
            <component-type>CMFPanelGroup</component-type>
            <renderer-type>javax.faces.Group</renderer-type>
        </component>
    </tag>
    <tag>
		<tag-name>insertPageFragments</tag-name>
		<source>components/insertPageFragments.xhtml</source>
		<attribute>
			<name>point</name>
			<required>true</required>
		</attribute>
	</tag>
    <tag>
		<tag-name>notificationMessages</tag-name>
		<source>components/notificationMessages.xhtml</source>
	</tag>
	<tag>
		<tag-name>treeHeader</tag-name>
		<source>components/treeHeader.xhtml</source>
		<attribute>
			<name>currentInstance</name>
			<required>true</required>
		</attribute>
		<attribute>
			<name>mode</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>display</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>size</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>disableLinks</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>extendedCurrent</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>reverseOrder</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>renderThumbnail</name>
			<required>false</required>	
		</attribute>
	</tag>
</facelet-taglib>