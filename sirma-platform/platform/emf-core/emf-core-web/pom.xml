<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.sirma.itt.emf</groupId>
		<artifactId>emf-core</artifactId>
		<version>2.6.0-SNAPSHOT</version>
	</parent>

	<artifactId>emf-core-web</artifactId>

	<description>Contains common web functionalities for EMF platform</description>

	<properties>
		<sonar.sources>src/main/java,src/main/resources/META-INF/resources</sonar.sources>
		<sonar.exclusions>**/js/libs/**,**/css/libs/**</sonar.exclusions>
	</properties>

	<dependencies>

		<dependency>
			<groupId>org.jboss.spec.javax.faces</groupId>
			<artifactId>jboss-jsf-api_2.2_spec</artifactId>
			<version>2.2.10</version>
			<scope>provided</scope>
		</dependency>
		<!-- Provided because of !!hard dependency!! on mojarra for ExtendedScriptRenderer -->
		<dependency>
			<groupId>com.sun.faces</groupId>
			<artifactId>jsf-impl</artifactId>
			<version>2.2.10</version>
			<scope>provided</scope>
		</dependency>
		<!-- EMF modules -->
		<dependency>
			<groupId>com.sirma.itt.emf</groupId>
			<artifactId>emf-core-api</artifactId>
		</dependency>

		<dependency>
			<groupId>com.yahoo.platform.yui</groupId>
			<artifactId>yuicompressor</artifactId>
			<version>2.4.7</version>
			<exclusions>
				<exclusion>
					<groupId>rhino</groupId>
					<artifactId>js</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- utilities -->
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>14.0.1</version>
		</dependency>

		<dependency>
			<groupId>org.freemarker</groupId>
			<artifactId>freemarker</artifactId>
		</dependency>

		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>

		<dependency>
			<groupId>com.sirma.itt</groupId>
			<artifactId>sirma-faces</artifactId>
			<version>0.0.2-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>io.swagger</groupId>
			<artifactId>swagger-jaxrs</artifactId>
		</dependency>

		<dependency>
			<groupId>com.sirma.itt.emf</groupId>
			<artifactId>emf-core-impl</artifactId>
			<scope>test</scope>
			<version>${emf.version}</version>
			<type>test-jar</type>
		</dependency>

        <dependency>
            <groupId>com.sirma.itt.seip</groupId>
            <artifactId>task-schedule-core</artifactId>
        </dependency>

		<dependency>
			<groupId>com.sirma.itt.seip</groupId>
			<artifactId>test-module</artifactId>
			<scope>test</scope>
			<type>test-jar</type>
			<version>${emf.version}</version>
		</dependency>
		<dependency>
			<groupId>com.sirma.itt.seip</groupId>
			<artifactId>db-core</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.sirma.itt.seip</groupId>
			<artifactId>content-thumbnail</artifactId>
		</dependency>
	</dependencies>
</project>