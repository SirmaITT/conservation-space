		</preConditions>
		<comment>Migrate saved search criteria to new model</comment>
		<customChange class="com.sirma.itt.emf.content.patch.criteria.ContentSearchCriteriaModelPatch">
		</customChange>
	</changeSet>

	<changeSet id="content-patches-2.1.0-02" author="mradkov" runAlways="false" failOnError="true">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="cmf_template"></tableExists>
		</preConditions>
		<comment>Migrate saved search criteria to new model in templates content</comment>
		<customChange class="com.sirma.itt.emf.content.patch.criteria.TemplateSearchCriteriaModelPatch">
		</customChange>
	</changeSet>

</databaseChangeLog>
