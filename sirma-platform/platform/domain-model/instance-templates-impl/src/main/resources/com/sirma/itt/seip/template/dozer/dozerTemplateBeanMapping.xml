<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<mapping>
		<class-a>com.sirma.itt.seip.template.TemplateEntity</class-a>
		<class-b>com.sirma.itt.seip.template.TemplateInstance</class-b>

		<field-exclude>
			<a>operation</a>
			<b>operation</b>
		</field-exclude>
		<field-exclude>
			<a>fieldHandler</a>
			<b>fieldHandler</b>
		</field-exclude>
		<field-exclude>
			<a>$JAVASSIST_READ_WRITE_HANDLER</a>
			<b>$JAVASSIST_READ_WRITE_HANDLER</b>
		</field-exclude>

		<field copy-by-reference="true">
			<a>id</a>
			<b>id</b>
		</field>

		<field>
			<a>dmsId</a>
			<b>dmsId</b>
		</field>

		<field-exclude>
			<a>properties</a>
			<b>properties</b>
		</field-exclude>

		<field>
			<a>templateId</a>
			<b>identifier</b>
		</field>
		<field>
			<a>groupId</a>
			<b>forType</b>
		</field>
		<field>
			<a>visibleTo</a>
			<b>visibleTo</b>
		</field>
		<field>
			<a>primary</a>
			<b>primary</b>
		</field>
		<field>
			<a>publicTemplate</a>
			<b>publicTemplate</b>
		</field>
		<field>
			<a>purpose</a>
			<b>purpose</b>
		</field>
		<field>
			<a>correspondingInstance</a>
			<b>correspondingInstance</b>
		</field>
	</mapping>

	<mapping>
		<class-a>com.sirma.itt.seip.template.TemplateDefinitionImpl</class-a>
		<class-b>com.sirma.itt.seip.template.jaxb.TemplateDefinition</class-b>

		<field-exclude>
			<a>operation</a>
			<b>operation</b>
		</field-exclude>
		<field-exclude>
			<a>fieldHandler</a>
			<b>fieldHandler</b>
		</field-exclude>
		<field-exclude>
			<a>$JAVASSIST_READ_WRITE_HANDLER</a>
			<b>$JAVASSIST_READ_WRITE_HANDLER</b>
		</field-exclude>

		<field>
			<a>fields</a>
			<b>fields.field</b>
			<a-hint>com.sirma.itt.seip.definition.model.PropertyDefinitionProxy</a-hint>
			<b-hint>com.sirma.itt.seip.definition.jaxb.ComplexFieldDefinition</b-hint>
		</field>
		<field>
			<a>identifier</a>
			<b>id</b>
		</field>
	</mapping>

</mappings>