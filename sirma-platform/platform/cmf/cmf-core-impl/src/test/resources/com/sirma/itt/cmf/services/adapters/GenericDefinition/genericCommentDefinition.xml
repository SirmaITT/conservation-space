<?xml version="1.0"?>
<definition id="commentDefinition" type="comment">
	<fields>
	    <field name="createdOn" 	type="dateTime" label="comment.created-on" uri="emf:createdOn"/>
	    <field name="createdBy" 	type="an..35" 	label="comment.created-from" uri="emf:createdBy"><control id="USER"/></field>
	    <field name="modifiedOn"  	type="dateTime" label="comment.modified-on" uri="emf:modifiedOn"/>
	    <field name="modifiedBy"    type="an..35" 	label="comment.modified-from" uri="emf:modifiedBy"><control id="USER"/></field>
	    <field name="content"  		type="ANY" 		label="comment.content" uri="emf:content" />
	    <field name="replyTo" 		type="an..100" 	label="comment.replyTo" uri="emf:replyTo"><control id="INSTANCE"/></field>
	    <field name="emf:isDeleted" type="boolean"  displayType="system" uri="emf:isDeleted" dmsType="FORBIDDEN"><value>false</value></field>
	</fields>

    <transitions>
		<transition id="editDetails" label="commentDefinition.editDetails.btn.title" eventId="editDetails" purpose="action" />
		<transition id="delete" label="commentDefinition.delete.btn.title" eventId="delete" purpose="action" immediate="true" confirmation="comment.confirm" />
		<transition id="createComment" label="commentDefinition.createComment.btn.title" eventId="createComment" purpose="action"/>
	</transitions>

	<stateTransitions>
		<stateTransition from="*" transition="createComment" to="IN_PROGRESS"/>

		<stateTransition from="IN_PROGRESS" transition="editDetails" to="IN_PROGRESS"/>
		<stateTransition from="IN_PROGRESS" transition="delete" to="DELETED" />

		<stateTransition from="*" transition="delete" to="DELETED" />
	</stateTransitions>
	<labels>
		<label id="comment.created-on">
			<value lang="bg">Дата на създаване</value>
			<value lang="en">Created On</value>
		</label>
		<label id="comment.created-from">
			<value lang="bg">Създаден от</value>
			<value lang="en">Created By</value>
		</label>
		<label id="comment.modified-on">
			<value lang="bg">Дата на актуализация</value>
			<value lang="en">Мodified Оn</value>
		</label>
		<label id="comment.modified-from">
			<value lang="bg">Актуализиран от</value>
			<value lang="en">Modified By</value>
		</label>
		<label id="comment.content">
			<value lang="bg">Съдържание</value>
			<value lang="en">Content</value>
		</label>
		<label id="comment.replyTo">
			<value lang="bg">Отговор</value>
			<value lang="en">Reply To</value>
		</label>
		<label id="commentDefinition.editDetails.btn.title">
			<value lang="bg">редактирай</value>
			<value lang="en">edit</value>
		</label>
		<label id="commentDefinition.delete.btn.title">
			<value lang="bg">изтрий</value>
			<value lang="en">delete</value>
		</label>
		<label id="commentDefinition.createComment.btn.title">
			<value lang="bg">отговори</value>
			<value lang="en">reply</value>
		</label>
	</labels>
</definition>