<?xml version="1.0"?>
<definition id="ngaMedia" parentId="media" isAbstract="true" type="object">
     <fields>
		<!-- headers and tooltips-->
		<field name="default_header" type="ANY" label="NGAMEDIA_DEFAULT_HEADER_NGA" />
		<field name="compact_header" type="an..4096" label="NGAMEDIA_COMPACT_HEADER_NGA" />
		<field name="breadcrumb_header" type="an..4096" label="NGAMEDIA_BREADCRUMB_HEADER_NGA" />
		<field name="tooltip_header" type="an..4096" label="NGAMEDIA_TOOLTIP_HEADER_NGA" />
			
		<field name="type" type="an..180" label="nga.type-classification.label" tooltip="nga.type.tooltip" order="5" />
		<field name="title" type="an..180" label="nga.title.label" tooltip="nga.title.tooltip" mandatory="true" order="10"/>
		<field name="name" type="an..180" label="nga.name.label" tooltip="nga.name.tooltip" displayType="readonly" mandatory="false" order="15"/>
		<field name="description" type="an..180" label="GEO10001.description" tooltip="nga.description.tooltip" order="20"/>
		<field name="mimetype" type="an..20" label="mimetype" tooltip="nga.mimetype.tooltip" codelist="CL215" displayType="readonly" order="25" />
		<field name="size" type="n..10" label="file-size" tooltip="nga.size.tooltip" displayType="readonly" order="30"/>
		<field name="identifier" type="an..50" label="nga.identifier.label" tooltip="nga.identifier.tooltip" order="32" displayType="readOnly" />
		<field name="status" type="an..35" tooltip="nga.status.tooltip" codelist="CL14" displayType="readonly" order="35" />
		<field name="emf:version" type="an..10" label="object.version" tooltip="nga.version.tooltip" displayType="readonly" order="40" />
		<field name="createdOn" type="dateTime" label="nga.createdOn.label" tooltip="nga.createdOn.tooltip" displayType="readonly" order="45" />
		<field name="createdBy" type="uri" label="nga.createdBy.label" tooltip="nga.createdBy.tooltip" displayType="readonly" order="50" /> 
		<field name="modifiedOn" type="datetime" label="nga.modifiedOn.label" tooltip="nga.modifiedOn.tooltip" order="55"/>
		<field name="modifiedBy" type="uri" label="nga.modifiedBy.label" tooltip="nga.modifiedBy.tooltip" order="60" />
		<field name="lockedBy" type="uri" label="nga.lockedBy.label" tooltip="nga.lockedBy.tooltip" displayType="readonly" order="68"  />
		<!-- system fields -->
		<field name="parentOf" type="uri" displayType="system" />
		<field name="hasParent" type="uri" displayType="system" />
		<field name="hasThumbnail" type="uri" displayType="system" />
		<field name="outcome" type="an..50" displayType="system" />
		<field name="completedOn" type="datetime" displayType="system" />
		<field name="integrated" type="boolean" displayType="system" />
		<field name="uri" type="an..50" displayType="system" />
		<field name="hasRevision" type="uri" displayType="system" />
		<field name="isRevisionOf" type="uri" displayType="system" />
		<field name="lastPublishedRevision" type="uri" displayType="system" />
		<field name="lastRevision" type="uri" displayType="system" />
		<field name="nextRevision" type="uri" displayType="system" />
		<field name="previousRevision" type="uri" displayType="system" />
		<field name="partOf" type="uri" displayType="system" />
		<field name="hasChild" type="uri" displayType="system" />
		
		<!-- system fields -->
		<field name="emf:revisionNumber" type="an..10" displayType="system" />
	</fields>

	<regions>	
		<region id="generalMediaRelationships" order="100" displayType="editable" label="nga.relationships.region.label">
			<fields>
				<field name="isAttachmentTo" type="uri" label="nga.attachmentOf.label" tooltip="nga.attachmentOf.tooltip" mandatory="false" displayType="editable" order="7000" multiValued="true" previewEmpty="false" uri="chc:attachmentOf" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:BusinessProcess</control-param>
					</control>
				</field>
				<field name="hasAttachment" type="uri" label="nga.hasAttachment.label" tooltip="nga.hasAttachment.tooltip" mandatory="false" displayType="editable" order="7002" multiValued="true" previewEmpty="false" uri="chc:hasAttachment" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:BusinessProcess</control-param>
					</control>
				</field>
				<field name="emf:hasWatcher" type="uri" label="nga.hasWatcher.label" tooltip="nga.hasWatcher.tooltip" mandatory="false" displayType="readOnly" order="7004" multiValued="true" previewEmpty="false" uri="emf:hasWatcher" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:User</control-param>
					</control>
				</field>
				<field name="hasThumbnail" type="uri" label="nga.hasThumbnail.label" tooltip="nga.hasThumbnail.tooltip" mandatory="false" displayType="readOnly" order="7006" previewEmpty="false" uri="emf:hasThumbnail" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Image</control-param>
					</control>
				</field>
				<field name="parentOf" type="uri" label="nga.parentOf.label" tooltip="nga.parentOf.tooltip" mandatory="false" displayType="readOnly" order="7008" multiValued="true" previewEmpty="false" uri="emf:parentOf" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:BusinessProcess</control-param>
					</control>
				</field>
				<field name="hasParent" type="uri" label="nga.hasParent.label" tooltip="nga.hasParent.tooltip" mandatory="false" displayType="readOnly" order="7010" previewEmpty="false" uri="emf:hasParent" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:User,emf:BusinessProcess</control-param>
					</control>
				</field>
				<field name="partOf" type="uri" label="nga.partOf.label" tooltip="nga.partOf.tooltip" mandatory="false" displayType="readOnly" order="7012" multiValued="true" previewEmpty="false" uri="ptop:partOf" >
					<control id="PICKER">
						<control-param id="range" name="range"></control-param>
					</control>
				</field>
				<field name="hasChild" type="uri" label="nga.hasChild.label" tooltip="nga.hasChild.tooltip" mandatory="false" displayType="readOnly" order="7014" multiValued="true" previewEmpty="false" uri="emf:hasChild" >
					<control id="PICKER">
						<control-param id="range" name="range"></control-param>
					</control>
				</field>
			</fields>
		</region>
	</regions>
	
	<transitions>
		<transition id="editDetails" order="10" />
		<transition id="uploadNewVersion" order="12" />
		<transition id="addAttachment" order="14" label="nga.addAttachment.action.label" tooltip="nga.addAttachment.action.tooltip" eventId="addAttachment" purpose="addRelation" >
			<fields>
				<field name="attachToConfig" type="an10">
					<value>
						{
							"predefinedTypes" : ["emf:Project","chc:ConservationActivity","emf:Document","emf:Media","emf:Task","emf:BusinessProcess","chc:CulturalObject","emf:Image","emf:Audio","emf:Video","chc:Sample"],
							"selection" : "multiple",
							"relation" : ["chc:hasAttachment"],
							"implicitParams" : {
								"removeExisting" : false
							}
						}
					</value>
					<control id="configuration" />
				</field>
			</fields>
		</transition>
		<!-- not used, only lable is change as the actions are visible in manage actions per roles -->
		<transition id="print" order="18" label="nga.print.label"/>
		<transition id="exportPDF" order="20" label="nga.exportPDF.label"/> 
		<transition id="exportWord" order="22" label="nga.exportWord.label"/>
		<!-- ********************************************************************************** -->
		<transition id="printTab" order="17" label="print.label" />
		<transition id="exportTabPDF" order="18" label="exportPDF.label" />
		<transition id="exportTabWord" order="21" label="exportWord.label" />
		<transition id="download" order="24" />
		<transition id="clone" order="25" />
		<transition id="move" order="26" >
			<fields>
				<field name="sendMail" type="an..200" displayType="system" mandatory="false">
					<value>
						<![CDATA[	
							var type = codelist.getDescription(3, root.get('type'), 'en');
							var title = root.get('title');
							var subject = '(Moved) ' + type + ': ' + title;
							
							//extract warchers and crearedBy users
							var watchers = root.get('emf:hasWatcher');
							var createdBy = root.get('createdBy');
							var recipients = [];
							var i = 0;
							if (watchers != null){
								for(i = 0; i < watchers.length; i++) {
									recipients[i] = watchers[i].toString();
								}
							}
							recipients.push(createdBy.toString());
							mail.sendNotifications(root, security.getCurrentLoggedUser(), subject, "email_move_object", recipients, context);
						]]>
					</value>
					<control id="SCRIPT">
						<control-param id="phase" name="phase">after</control-param>
						<control-param id="async" name="async">true</control-param>
						<control-param id="persistent" name="persistent">false</control-param>
					</control>
				</field>
			</fields>
		</transition>
		<transition id="lock" order="28" />
		<transition id="unlock" order="30" />
		<transition id="addWatchers" order="32" label="addWatchers.label" tooltip="addWatchers.tooltip" eventId="addWatchers" purpose="addRelation" >
			<fields>
				<field name="addAttachmentConfig" type="an10">
					<value>						
						{
							"predefinedTypes" : ["emf:User"],
							"selection" : "multiple",
							"relation" : ["emf:hasWatcher"],
							"implicitParams" : {
								"removeExisting" : false
							}
						}
					</value>
					<control id="configuration" />
				</field>
			</fields>
		</transition>
		<transition id="addThumbnail" order="34" />
		<transition id="saveAsTemplate" order="36" />			
		<transition id="managePermissions" order="38" />
		<transition id="delete" order="40" confirmation="deleteCS.confirm" >
			<fields>
				<field name="sendMail" type="an..200" displayType="system" mandatory="false">
                    <value>
						<![CDATA[	
							var type = codelist.getDescription(3, root.get('type'), 'en');
							var title = root.get('title');
							var subject = '(Deleted) ' + type +': ' + title;
							
							//extract warchers and crearedBy users
							var watchers = root.get('emf:hasWatcher');
							var createdBy = root.get('createdBy');
							var recipients = [];
							var i = 0;
							if (watchers != null){
								for(i = 0; i < watchers.length; i++) {
									recipients[i] = watchers[i].toString();
								}
							}
							recipients.push(createdBy.toString());
							mail.sendNotifications(root, security.getCurrentLoggedUser(), subject, "email_delete_object", recipients, context);
						]]>
                    </value>
                    <control id="SCRIPT">
                        <control-param id="phase" name="phase">after</control-param>
                        <control-param id="async" name="async">true</control-param>
                        <control-param id="persistent" name="persistent">false</control-param>
                    </control>
                </field>
			</fields>
		</transition>
	</transitions>	
		 
	<stateTransitions>
		<stateTransition from="INIT" transition="create" to="DRAFT"/>
		<stateTransition from="INIT" transition="clone" to="DRAFT"/>
		
		<stateTransition from="DRAFT" transition="saveAsTemplate" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="editDetails" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="download" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="move" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="managePermissions" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="lock" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="unlock" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="uploadNewVersion" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="addThumbnail" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="addAttachment" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="addWatchers" to="DRAFT"/>
		<stateTransition from="DRAFT" transition="printTab" to="DRAFT" />
        <stateTransition from="DRAFT" transition="exportTabPDF" to="DRAFT" />
		<stateTransition from="DRAFT" transition="exportTabWord" to="DRAFT" />
		<stateTransition from="DRAFT" transition="clone" to="DRAFT" />
		<stateTransition from="DRAFT" transition="createInContext" to="DRAFT"/>
		
		<stateTransition from="DRAFT" transition="delete" to="DELETED"/>
		<stateTransition from="*" transition="delete" to="DELETED" />
	</stateTransitions>
	<labels>
		<label id="NGAMEDIA_TOOLTIP_HEADER_NGA">
			<value lang="en"><![CDATA[${eval(#{eval(
				<span class="thumbnail-content">
					<img class="thumbnail" src="${thumbnailUri(64)}" />
				</span>
				<span class="tooltip-data">
					<span class="tooltip-header">
						<a href="${link(currentInstance)}" class="instance-link" data-status="${get([status])}" data-id="${id.db}" data-uid="${id.uid}">
							<span data-title="${get([title])}">${get([title])}</span>
						</a>
					</span>
					<span class="tooltip-row">
						<label>Classification: </label>
						<span data-property="type">${CL([type])}</span>
					</span>
					<span class="tooltip-row">
						<label>Version: </label>
                        <span data-property-version="emf:version">${get([emf:version])}</span>
					</span>
					<span class="tooltip-row">
                        <label>System modified by: </label>
                        <span data-property="modifiedBy">${user(${get([modifiedBy])})}</span>
                    </span>
					<span class="tooltip-row">
                        <label>System modified on: </label>
                        <span data-property="modifiedOn">${date([modifiedOn]).format(MM.dd.yyyy, HH:mm)}</span>
                    </span>
				</span>
			)})}]]></value>
		</label>
		<label id="NGAMEDIA_DEFAULT_HEADER_NGA">	
			<value lang="en"><![CDATA[${eval(
			${var.href= ${if(${get([emf:isDeleted])}==false).then(href="${link(currentInstance)}")}}
			${var.isVersion= ${if(${get([isVersion])} == true).then(true).else(false)}}
			<span><img src="${thumbnailUri(64)}"/></span>
			<span>
				<span>
					<span data-property="type">${CL([type])}</span>&nbsp;
					(<span data-property="status">${CL([status])}</span>)
				</span><br />
					<span class="truncate-element">
						<a ${var.href} class="instance-link ${if(${get([emf:isDeleted])}==true).then(instance-deleted).else(has-tooltip)}">
							${if(${get([emf:isDeleted])}==true).then(<span>(Deleted)</span> )}
							${if(${get([title])}<>${get([name])}).then(<span data-property="title">${get([title])}</span>&nbsp;/&nbsp;)}
							<span data-property="name">${get([name])}</span>
						</a>
					</span>
					${if(${var.isVersion}).then(
						&nbsp;<span data-property="emf:version" class="object-version version badge">${get([emf:version])}</span>
					)}
					${if(${get([lockedBy])} <> null).then(<br /><span class="banner label label-warning">${label(lockedBy)}${user([lockedBy])}</span>)}
				</span>	
			</span>)}]]></value>
		</label>
		
		<label id="NGAMEDIA_COMPACT_HEADER_NGA">
			<value lang="en"><![CDATA[${eval(
			${var.href= ${if(${get([emf:isDeleted])} == false).then(href="${link(currentInstance)}")}}
			${var.isVersion= ${if(${get([isVersion])} == true).then(true).else(false)}}
			<span><img src="${thumbnailUri(16)}"/></span>
			<span>
				${if(${get([lockedBy])} <> null).then(<span class="lock-label"><i class="fa fa-lock fa-lg"></i></span>)}
				<span class="truncate-element">
					<a ${var.href} class="instance-link ${if(${get([emf:isDeleted])} == true).then(instance-deleted).else(has-tooltip)}">
						${if(${get([emf:isDeleted])} == true).then(<span>(Deleted)</span>&nbsp;)}
						<span data-property="name">${get([name])}</span>
					</a>&nbsp;
					(<span data-property="status">${CL([status])}</span>)&nbsp;
					${if(${var.isVersion}).then(
						&nbsp;<span data-property="emf:version" class="object-version version badge">${get([emf:version])}</span>
					)}
				</span>
			</span>)}]]></value>
		</label>
		
		<label id="NGAMEDIA_BREADCRUMB_HEADER_NGA">
			<value lang="en"><![CDATA[${eval(
			${var.href= ${if(${get([emf:isDeleted])} == false).then(href="${link(currentInstance)}")} }
			<span><img src="${thumbnailUri(16)}"/></span>
			<span>
				${if(${get([lockedBy])} <> null).then(<span class="lock-label"><i class="fa fa-lock fa-lg"></i></span>)}
				<span class="truncate-element">
					<a ${var.href} class="instance-link ${if(${get([emf:isDeleted])} == true).then(instance-deleted).else(has-tooltip)}">
						${if(${get([emf:isDeleted])} == true).then(<span>(Deleted)</span>&nbsp;)}
						<span data-property="name">${get([name])}</span>
					</a>
				</span>
			</span>)}]]></value>
		</label>
	</labels>
</definition>
