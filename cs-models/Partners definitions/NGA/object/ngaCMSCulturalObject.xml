<?xml version="1.0"?>
<definition id="ngaCMSCulturalObject" parentId="ngaCulturalObject" isAbstract="true" type="object"> <!-- definiton of base CMS cultural object metadata-->
    <fields>
		<field name="default_header" type="ANY" label="OBJECT_DEFAULT_HEADER_CS" />
        <field name="compact_header" type="an..4096" label="OBJECT_COMPACT_HEADER_CS" />
		<field name="breadcrumb_header" type="an..4096" label="OBJECT_BREADCRUMB_HEADER_CS" />
		<field name="tooltip_header" type="an..4096" label="OBJECT_TOOLTIP_HEADER_CS" />

		<field name="integratedSystemId" type="an..1024" displayType="system" uri="chc:integratedSystemId" />	
		<field name="references" type="an..1200" displayType="system" />
		<field name="integrated" type="boolean" displayType="system" uri="chc:integrated">
			<value>false</value>
		</field>
		
		<field name="uri" type="an..50" displayType="system" />
		<field name="hasRevision" type="uri" displayType="system" />
		<field name="isRevisionOf" type="uri" displayType="system" />
		<field name="lastPublishedRevision" type="uri" displayType="system" />
		<field name="lastRevision" type="uri" displayType="system" />
		<field name="nextRevision" type="uri" displayType="system" />
		<field name="previousRevision" type="uri" displayType="system" />
    </fields>
	<regions>
		<region id="generalCulturalObjectInformation" order="60" displayType="editable" label="ngaCulturalObject.generalCulturalObjectInformationCMS.region.label">
			<fields>
				<field name="artistNames" type="an..1024" order="600" label="ngaCulturalObject.artistNames.label" tooltip="ngaCulturalObject.artistNames.tooltip" mandatory="true" displayType="editable" uri="nga:artistNames" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="title" type="an..1000" order="602" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition>
				</field>
				<field name="portfolioSeries" type="an..500" order="604" label="ngaCulturalObject.portfolioSeries.label" tooltip="ngaCulturalObject.portfolioSeries.tooltip" mandatory="false" displayType="editable" uri="nga:portfolioTitle" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="creationDates" type="an..180" order="606" label="ngaCulturalObject.creationDates.label" tooltip="ngaCulturalObject.creationDates.tooltip" mandatory="false" displayType="editable" uri="nga:creationDates" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="accessionNumber" type="an..50" order="608" label="ngaCulturalObject.accessionNumber.label" tooltip="ngaCulturalObject.accessionNumber.tooltip" mandatory="false" displayType="editable" uri="nga:accessionNumber" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition>
					<condition id="mandatoryField" renderAs="MANDATORY">[integrated] IN ('true')</condition>
				</field>
				<field name="objectId" type="an..6" order="610" label="ngaCulturalObject.objectId.label" tooltip="ngaCulturalObject.objectId.tooltip" mandatory="false" displayType="hidden" uri="emf:externalID" >
					<condition id="readOnlyFields" renderAs="READONLY">[integrated] IN ('true')</condition>
					<condition id="mandatoryField" renderAs="MANDATORY">[integrated] IN ('true')</condition>
				</field>
				<field name="type" type="an..50" order="613" label="nga.type-classification.label">
					<value>Cultural Object</value>
					<control id="RELATED_FIELDS">
						<control-param id="fieldsToRerender" name="RERENDER">subType</control-param>
						<control-param id="filterSource" name="FILTER_SOURCE">extra1</control-param>
						<control-param id="filterInclusive" name="INCLUSIVE">true</control-param>
					</control>
				</field> 					
				<field name="subType" type="an..50" order="615" label="ngaCulturalObject.subType.label" mandatory="false">
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="medium" type="an..1024" order="616" label="ngaCulturalObject.medium.label" tooltip="ngaCulturalObject.medium.tooltip" mandatory="false"  displayType="editable" uri="nga:medium"  >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="description" type="an..5000" label="GEO10001.description" order="618" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition>
				</field>
				<field name="curatorialRemarks" type="an..10000" displayType="editable" label="ngaCulturalObject.curatorialRemarks.label" tooltip="ngaCulturalObject.curatorialRemarks.tooltip" order="620" uri="nga:curatorialRemarks">
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="physicalDimensions" type="an..1500" order="622" label="ngaCulturalObject.physicalDimensions.label" tooltip="ngaCulturalObject.physicalDimensions.tooltip" mandatory="false" displayType="editable" uri="nga:physicalDimensions" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="catalogueRaisonneRef" type="an..1024" order="623" label="ngaCulturalObject.catalogueRaisonneRef.label" tooltip="ngaCulturalObject.catalogueRaisonneRef.tooltip" mandatory="false" displayType="editable" uri="nga:catalogueRaisonneRef" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="inscriptions" type="an..5000" order="624" label="ngaCulturalObject.inscriptions.label" tooltip="ngaCulturalObject.inscriptions.tooltip" mandatory="false" displayType="editable" uri="nga:inscriptions"  >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="distinguishingMarks" type="an..500" order="626" label="ngaCulturalObject.distinguishingMarks.label" tooltip="ngaCulturalObject.distinguishingMarks.tooltip" mandatory="false" displayType="editable" uri="nga:distinguishingMarks" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="creditLine" type="an..1024" order="630" label="ngaCulturalObject.creditLine.label" tooltip="ngaCulturalObject.creditLine.tooltip" mandatory="false" displayType="readonly" uri="nga:creditLine" >
					<condition id="hiddenFields" renderAs="HIDDEN">[integrated] IN ('false')</condition>
				</field>
				<field name="provenance" type="an..12000" order="632" label="ngaCulturalObject.provenance.label" tooltip="ngaCulturalObject.provenance.tooltip" mandatory="false" displayType="editable" uri="nga:provenance" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="ownerName" type="an..1024" order="634" label="ngaCulturalObject.ownerName.label" tooltip="ngaCulturalObject.ownerName.tooltip" mandatory="false" displayType="editable" uri="nga:ownerNames">
					<condition id="hiddenFields" renderAs="HIDDEN">[integrated] IN ('true')</condition></field>
				<field name="objectDepartment" type="an..20" order="636" label="ngaCulturalObject.objectDepartment.label" tooltip="ngaCulturalObject.objectDepartment.tooltip" mandatory="false" displayType="editable" uri="nga:objectDepartmentName" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="homeLocation" type="an..1024" order="638" label="ngaCulturalObject.homeLocation.label" tooltip="ngaCulturalObject.homeLocation.tooltip" mandatory="false" displayType="editable" multiValued="true" uri="nga:homeLocation" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="currentLocation" type="an..180" order="640" label="ngaCulturalObject.currentLocation.label" tooltip="ngaCulturalObject.currentLocation.tooltip" mandatory="false" displayType="editable" multiValued="true" uri="nga:currentLocation" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>
				<field name="bibliography" type="an..25000" order="642" label="ngaCulturalObject.bibliography.label" tooltip="ngaCulturalObject.bibliography.tooltip" mandatory="false" displayType="editable" uri="nga:bibliography" >
					<condition id="readonlyFields" renderAs="READONLY">[integrated] IN ('true')</condition></field>		
				<field name="weight" type="an..180" order="644" label="ngaCulturalObject.weight.label" tooltip="ngaCulturalObject.weight.tooltip" mandatory="false" displayType="editable" uri="nga:weight" />
				<field name="packingRequirements" type="an..1800" order="646" displayType="editable" label="ngaCulturalObject.packingRequirements.label" tooltip="ngaCulturalObject.packingRequirements.tooltip" uri="nga:packingRequirements" />	
				<field name="environmentalRequirements" type="an..1800" order="648" displayType="editable" label="ngaCulturalObject.environmentalRequirements.label" tooltip="ngaCulturalObject.environmentalRequirements.tooltip" uri="nga:environmentalRequirements" />
				<field name="handlingRequirements" type="an..1800" order="650" displayType="editable" label="ngaCulturalObject.handlingRequirements.label" tooltip="ngaCulturalObject.handlingRequirements.tooltip" uri="nga:handlingRequirements" />
				<field name="installationRequirements" type="an..1800" order="652" displayType="editable" label="ngaCulturalObject.installationRequirements.label" tooltip="ngaCulturalObject.installationRequirements.tooltip" uri="nga:installationRequirements"/>
			</fields>
		</region>
	</regions>	
	
	<transitions>
		<!-- System action -->
		<transition id="prepareImport" label="nga.prepareImport.action.label" eventId="prepareImport" purpose="prepareImport"  />
		
		<transition id="editDetails" order="9" />
		<transition id="import" order="10" label="nga.import.action.label" tooltip="nga.import.action.tooltip" eventId="import" purpose="import" confirmation="import.confirm" />
		<transition id="updateInt" order="11" label="nga.updateInt.action.label" tooltip="nga.updateInt.action.tooltip" eventId="updateInt" purpose="updateInt" confirmation="update.confirm" />
		<transition id="achive" order="12" />
		
     </transitions>
	
	 <stateTransitions>			
		<!-- transitions related to integration with external system (CMS) -->
		<stateTransition from="INIT" transition="prepareImport" to="FOR_IMP"/>
		<stateTransition from="INIT" transition="create" to="DRAFT" />
		<stateTransition from="INIT" transition="clone" to="DRAFT">
			<condition renderAs="PROPERTY" id="integrated">false</condition>
		</stateTransition>
		<stateTransition from="FOR_IMP" transition="import" to="DRAFT" />
		
		<stateTransition from="DRAFT" transition="updateInt" to="DRAFT" >	
			<condition renderAs="PROPERTY" id="integrated">true</condition>
		</stateTransition>	
		<stateTransition from="DRAFT" transition="editDetails" to="DRAFT" />
		<stateTransition from="DRAFT" transition="addThumbnail" to="DRAFT" />
		<stateTransition from="DRAFT" transition="move" to="DRAFT" />
		<stateTransition from="DRAFT" transition="lock" to="DRAFT" />
		<stateTransition from="DRAFT" transition="unlock" to="DRAFT" />
		<stateTransition from="DRAFT" transition="saveAsTemplate" to="DRAFT" />
		<stateTransition from="DRAFT" transition="revertVersion" to="DRAFT" >
			<condition renderAs="PROPERTY" id="integrated">false</condition>
		</stateTransition>	
		<stateTransition from="DRAFT" transition="managePermissions" to="DRAFT" />
		<stateTransition from="DRAFT" transition="printTab" to="DRAFT" />
        <stateTransition from="DRAFT" transition="exportTabPDF" to="DRAFT" />  
		<stateTransition from="DRAFT" transition="exportTabWord" to="DRAFT" />
		<stateTransition from="DRAFT" transition="clone" to="DRAFT" >
			<condition renderAs="PROPERTY" id="integrated">false</condition>
		</stateTransition>	
		
		<stateTransition from="DRAFT" transition="revoke" to="OBSOLETE">
			<condition id="requiredFields" renderAs="REQUIRED">[nga:duplicates]</condition>
			<condition renderAs="PROPERTY" id="integrated">false</condition>
		</stateTransition>
		
		<stateTransition from="DRAFT" transition="addPrimaryImage" to="DRAFT" />
        <stateTransition from="DRAFT" transition="addAttachment" to="DRAFT" />
		<stateTransition from="DRAFT" transition="addWatchers" to="DRAFT" />
		<stateTransition from="DRAFT" transition="createDocument" to="DRAFT" />
		<stateTransition from="DRAFT" transition="createWorkflow" to="DRAFT" />
		<stateTransition from="DRAFT" transition="createInContext" to="DRAFT"/>
		
		<stateTransition from="DRAFT" transition="achive" to="ARCHIVED">
			<condition renderAs="PROPERTY" id="emf:revisionType">emf:revision</condition>
			<condition renderAs="PROPERTY" id="emf:revisionType">emf:latestRevision</condition>
		</stateTransition>
		<stateTransition from="DRAFT" transition="achive" to="DRAFT"/>
		
		<stateTransition from="OBSOLETE" transition="saveAsTemplate" to="OBSOLETE"/>
		<stateTransition from="OBSOLETE" transition="printTab" to="OBSOLETE" />
        <stateTransition from="OBSOLETE" transition="exportTabPDF" to="OBSOLETE" />
		<stateTransition from="OBSOLETE" transition="exportTabWord" to="OBSOLETE" />
		<stateTransition from="OBSOLETE" transition="createDocument" to="OBSOLETE" />
		<stateTransition from="OBSOLETE" transition="createInContext" to="OBSOLETE"/>
		<stateTransition from="OBSOLETE" transition="clone" to="OBSOLETE" >
			<condition renderAs="PROPERTY" id="integrated">false</condition>
		</stateTransition>	
		
		<stateTransition from="OBSOLETE" transition="delete" to="OBSOLETE"/>

		<stateTransition from="ARCHIVED" transition="printTab" to="ARCHIVED" />
        <stateTransition from="ARCHIVED" transition="exportTabPDF" to="ARCHIVED" />
		<stateTransition from="ARCHIVED" transition="exportTabWord" to="ARCHIVED" />
		<stateTransition from="ARCHIVED" transition="managePermissions" to="ARCHIVED" />
		<stateTransition from="ARCHIVED" transition="createDocument" to="ARCHIVED" />
		<stateTransition from="ARCHIVED" transition="createInContext" to="ARCHIVED"/>
		
		<stateTransition from="DRAFT" transition="delete" to="DELETED" />
		<stateTransition from="*" transition="delete" to="DELETED" />
   </stateTransitions>

	<labels>
		<label id="OBJECT_TOOLTIP_HEADER_CS">
			<value lang="en"><![CDATA[${eval(#{eval(
				<span class="thumbnail-content">
					<img class="thumbnail" src="${thumbnailUri(64)}" />
				</span>
				<span class="tooltip-data">
					<span class="tooltip-header">
						<a href="${link(currentInstance)}" class="instance-link" data-status="${get([status])}" data-id="${id.db}" data-uid="${id.uid}">
							${if(${get([integrated])}==false).then(#&nbsp;<span data-property="identifier">${get([identifier])}</span>&nbsp;).else(#&nbsp;<span data-property="accessionNumber">${get([accessionNumber])}</span>&nbsp;)}
							 ${if(${get([title])}<>null).then(<span data-title="${get([title])}">${get([title])}</span>)}
						</a>
					</span>
					<span class="tooltip-row">
						<label>System source: </label>
						<span data-property="sourceSystemId">${CL([sourceSystemId])}</span>
					</span>
					<span class="tooltip-row">
						<label>Classification: </label>
						<span data-property="type">${CL([type])}</span>
					</span>
					${if(${get([subType])}<>null).then(
						<span class="tooltip-row">
							<label>Sub-classification: </label>
							<span data-property="subType">${CL([subType])}</span>
						</span>
					)}
					<span class="tooltip-row">
						<label>Artist(s): </label>
						<span data-property="artistNames">${get([artistNames])}</span>
					</span>
					<span class="tooltip-row">
						<label>Title (local primary): </label>
						<span data-property="title">${get([title])}</span>
					</span>
					${if(${get([creationDates])}<>null).then(
					<span class="tooltip-row">
						<label>Create date(s): </label>
						<span data-property="creationDates">${get([creationDates])}</span>
					</span>
					)}
					${if(${get([medium])}<>null).then(
					<span class="tooltip-row">
						<label>Material/ Medium (very general): </label>
						<span data-property="medium">${get([medium])}</span>
					</span>
					)}
					${if(${get([physicalDimensions])}<>null).then(
					<span class="tooltip-row">
						<label>Physical dimensions (overall): </label>
						<span data-property="physicalDimensions">${get([physicalDimensions])}</span>
					</span>
					)}
					<span class="tooltip-row">
						<label>Vision: </label>
						<span data-property="emf:version">${get([emf:version])}</span>
					</span>
					<span class="tooltip-row">
						<label>System modified by: </label>
						<span data-property="modifiedBy">${user(${get([modifiedBy])})}</span>
					</span>
					<span class="tooltip-row">
						<label>System modified on: </label>
						<span data-property="modifiedOn">${date([modifiedOn]).format(MM.dd.yyyy, HH:mm)}</span>
					</span>
			</span>)})}]]></value>
    	</label>
		<label id="OBJECT_DEFAULT_HEADER_CS">
			<value lang="en"><![CDATA[${eval(
			${var.href= ${if(${get([emf:isDeleted])}==false).then(href="${link(currentInstance)}")}}
			${var.isVersion= ${if(${get([isVersion])} == true).then(true).else(false)}}
			${var.isLatest=${if((${get([emf:revisionType])}).matches(.*?latest)).then(true).else(false)}}
			${var.isRevision=${if((${get([emf:revisionType])}).matches(.*?revision)).then(true).else(false)}}
			<span><img src="${thumbnailUri(64)}"/></span>
			<span>
				<span>
					<span data-property="sourceSystemId">${CL([sourceSystemId])}</span>&nbsp;
					<span data-property="type">${CL([type])}</span>&nbsp;
					(<span data-property="status">${CL([status])}</span>)
					${if(${var.isVersion}).then(
						&nbsp;<span data-property="emf:version" class="object-version version badge">${get([emf:version])}</span>
					)}
				</span>
				<br />
				${if(${get([status])}<>FOR_IMP).then(
					<a ${var.href} class="instance-link ${if(${get([emf:isDeleted])}==true).then(instance-deleted).else(has-tooltip)}">
						${if(${get([emf:isDeleted])}==true).then(<span>(Deleted)</span>)}
						${if(${or(${var.isLatest} or ${var.isRevision})}).then(
							<span>(</span>Archived revision:&nbsp;<span data-property="revisionNumber">${get([emf:revisionNumber])}</span>)&nbsp;
						)}
						${if(${get([integrated])}==false).then(<span>#</span>&nbsp;<span data-property="identifier">${get([identifier])}</span>&nbsp;).else(<span>#</span>&nbsp;<span data-property="accessionNumber">${get([accessionNumber])}</span>&nbsp;)}
						<span data-property="title">${get([title])}</span>&nbsp;
					</a>
					<span data-property="artistNames">${get([artistNames])}</span>
				).else(
					${if(${get([emf:isDeleted])}==true).then(<span>(Deleted)</span>)}
					${if(${get([integrated])}==true).then(<span>#</span>&nbsp;<span data-property="accessionNumber">${get([accessionNumber])}</span>&nbsp;)}
					<span data-property="title">${get([title])}</span>,&nbsp;
					<span data-property="artistNames">${get([artistNames])}</span>
				)}
				${if(${get([isRevisionOf])}<>null).then(<br />Revision of:<span data-property="isRevisionOf">${objectProperty(${get([isRevisionOf])})}</span>)}
				${if(${get([lockedBy])} <> null).then(<br /><span class="banner label label-warning">${label(lockedBy)}${user([lockedBy])}</span>)}
				${if(${get([references])}<>null).then(<br /> Associated with:&nbsp;<span data-property="references">${get([references])}</span>)}
			</span>)}]]></value>
		</label>
			
		<label id="OBJECT_COMPACT_HEADER_CS">
			<value lang="en"><![CDATA[${eval( 
			${var.href= ${if(${get([emf:isDeleted])} == false).then(href="${link(currentInstance)}")}}
			${var.isVersion= ${if(${get([isVersion])} == true).then(true).else(false)}}
			${var.isLatest=${if((${get([emf:revisionType])}).matches(.*?latest)).then(true).else(false)}}
			${var.isRevision=${if((${get([emf:revisionType])}).matches(.*?revision)).then(true).else(false)}}
			<span><img src="${thumbnailUri(16)}"/></span>
			<span>
				${if(${get([lockedBy])} <> null).then(<span class="lock-label"><i class="fa fa-lock fa-lg"></i></span>)}
				${if(${or(${var.isLatest} or ${var.isRevision})}).then(
					<span>(</span>Archived revision:&nbsp;<span data-property="revisionNumber">${get([emf:revisionNumber])}</span>)&nbsp;
				)}
				<span data-property="sourceSystemId">${CL([sourceSystemId])}</span>&nbsp;
				<span data-property="type">${CL([type])}</span>&nbsp;
				<a ${var.href} class="instance-link ${if(${get([emf:isDeleted])} == true).then(instance-deleted).else(has-tooltip)}">
					${if(${get([emf:isDeleted])} == true).then(<span>(Deleted)</span>&nbsp;)}
					${if(${get([integrated])}==false).then(<span>#</span>&nbsp;<span data-property="identifier">${get([identifier])}</span>&nbsp;).else(<span>#</span>&nbsp;<span data-property="accessionNumber">${get([accessionNumber])}</span>&nbsp;)}
				</a>
				<span data-property="title">${get([title])}</span>&nbsp;
				${if(${var.isVersion}).then(
					<span data-property="emf:version" class="object-version version badge">${get([emf:version])}</span>
				)}
				</span>
			</span>)}]]></value>
		</label>
			
		<label id="OBJECT_BREADCRUMB_HEADER_CS">
			<value lang="en"><![CDATA[${eval(
			${var.href= ${if(${get([emf:isDeleted])} == false).then(href="${link(currentInstance)}")} }
			${var.isLatest=${if((${get([emf:revisionType])}).matches(.*?latest)).then(true).else(false)}}
			${var.isRevision=${if((${get([emf:revisionType])}).matches(.*?revision)).then(true).else(false)}}
			<span><img src="${thumbnailUri(16)}"/></span>
			<span>
				${if(${get([lockedBy])} <> null).then(<span class="lock-label"><i class="fa fa-lock fa-lg"></i></span>)}
				<a ${var.href} class="instance-link ${if(${get([emf:isDeleted])} == true).then(instance-deleted).else(has-tooltip)}">
					${if(${get([emf:isDeleted])} == true).then(<span>(Deleted)</span>&nbsp;)}
					${if(${or(${var.isLatest} or ${var.isRevision})}).then(
						<span>(</span>Archived revision:&nbsp;<span data-property="revisionNumber">${get([emf:revisionNumber])}</span>)&nbsp;
					)}
					${if(${get([integrated])}==false).then(<span>#</span>&nbsp;<span data-property="identifier">${get([identifier])}</span>).else(<span>#</span>&nbsp;<span data-property="accessionNumber">${get([accessionNumber])}</span>)}
				</a>
			</span>		
			)}]]></value>
		</label>
	</labels>	
</definition>
