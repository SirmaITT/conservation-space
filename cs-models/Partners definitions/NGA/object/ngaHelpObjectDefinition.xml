<?xml version="1.0"?>
<definition id="ngaHelp" parentId="help" type="object">
	<fields>
		<field name="default_header" type="ANY" label="HELP_DEFAULT_HEADER" />
        <field name="compact_header" type="an..4096" label="HELP_COMPACT_HEADER" />
		<field name="tooltip_header" type="an..4096" label="HELP_TOOLTIP_HEADER" />
		
		<field name="helpTarget" type="an..1024" displayType="system" />
		<field name="identifier" order="10" displayType="system" />
		<field name="type" type="an..50" displayType="system" />
        <field name="title" type="an..180" displayType="system"/>
		<field name="description" type="an..5000" displayType="system" />
		<field name="createdOn" type="dateTime" displayType="system"  />
    	<field name="createdBy" type="uri" displayType="system" />
        <field name="modifiedOn" type="dateTime" displayType="system"/>
        <field name="modifiedBy" type="uri" displayType="system" />
		<field name="status" type="an..50" displayType="system" />
		<field name="emf:version" type="an..10" displayType="system" />
		<field name="outcome" type="an..50" displayType="system" />
		<field name="parentOf" type="uri" displayType="system" />
		<field name="hasParent" type="uri" displayType="system" />
		<field name="hasThumbnail" type="uri" displayType="system" />
		<field name="outcome" type="an..50" displayType="system" />
		<field name="completedOn" type="datetime" displayType="system" />
		
		<field name="integrated" type="boolean" displayType="system" />
		<field name="uri" type="an..50" label="uri.label" displayType="system" />
		<field name="hasRevision" type="uri" displayType="system" />
		<field name="isRevisionOf" type="uri" displayType="system" />
		<field name="lastPublishedRevision" type="uri" displayType="system" />
		<field name="lastRevision" type="uri" displayType="system" />
		<field name="nextRevision" type="uri" displayType="system" />
		<field name="previousRevision" type="uri" displayType="system" />
		<field name="partOf" type="uri" displayType="system" />
		<field name="hasChild" type="uri" displayType="system" />
	</fields>
	<regions>	
		<region id="helpInformation" order="60" displayType="editable" label="nga.helpInformation.region.label">
			<fields>
				<field name="type" type="an..50" order="40" codelist="CL3" label="nga.type.label" tooltip="nga.type.tooltip" mandatory="false" displayType="readOnly" dmsType="emf:type" uri="emf:type">
					<value>ngaHelp</value>
				</field>
				<field name="helpTarget" type="an..1800" displayType="editable" order="60" codelist="CL600" label="nga.helpTarget.label" tooltip="nga.helpTarget.tooltip" multiValued="true" dmsType="FORBIDDEN" uri="emf:helpTarget" />
				<field name="title" type="an..1000" mandatory="true"  displayType="editable" order="602" label="nga.title.label" tooltip="nga.title.tooltip"  dmsType="cm:title" uri="dcterms:title" />
			</fields>
		</region>
		<region id="systemData" order="70" displayType="editable" label="nga.systemInformation.region.label">
			<fields>
				<field name="identifier" type="an..50" label="nga.identifier.label" tooltip="nga.identifier.tooltip" mandatory="false" displayType="readOnly" order="701" rnc="${eval(HP${seq({+hpSequence})})}" uri="dcterms:identifier"/>
				<field name="status" type="an..50" codelist="CL601" label="nga.status.label" tooltip="nga.status.tooltip" mandatory="false" displayType="readOnly" order="702"	previewEmpty="false" dmsType="emf:status" uri="emf:status" />
				<field name="emf:version" type="an..10" label="object.version" tooltip="nga.version.tooltip" displayType="readOnly" order="704" dmsType="FORBIDDEN" uri="emf:version"/> 
				<field name="createdOn" type="dateTime" label="nga.createdOn.label" tooltip="nga.createdOn.tooltip" displayType="readOnly" order="706" dmsType="-cm:created" uri="emf:createdOn" />
				<field name="createdBy" type="uri" label="nga.createdBy.label" tooltip="nga.createdBy.tooltip" displayType="readOnly" order="708" dmsType="-cm:creator" uri="emf:createdBy" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:User</control-param>
					</control>
				</field>
				<field name="modifiedOn" type="datetime" label="nga.modifiedOn.label" tooltip="nga.modifiedOn.tooltip" displayType="readOnly" order="710" previewEmpty="false" dmsType="-cm:modified"  uri="emf:modifiedOn"/>
				<field name="modifiedBy" type="uri" label="nga.modifiedBy.label" tooltip="nga.modifiedBy.tooltip" displayType="readOnly" order="712" previewEmpty="false" dmsType="-cm:modifier" uri="emf:modifiedBy">
					<control id="PICKER">
						<control-param id="range" name="range">emf:User</control-param>
					</control>
				</field>
				<field name="lockedBy" type="uri" label="nga.lockedBy.label" tooltip="nga.lockedBy.tooltip" displayType="readonly" order="714" dmsType="FORBIDDEN" previewEmpty="false">
					<control id="PICKER">
						<control-param id="range" name="range">emf:User</control-param>
					</control>
				</field>
				<field name="attachmentOf" type="uri" label="nga.attachmentOf.label" tooltip="nga.attachmentOf.tooltip" mandatory="false" displayType="editable" multiValued="true" order="8012" previewEmpty="false" uri="chc:attachmentOf" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:BusinessProcess</control-param>
					</control>
				</field>
				<field name="hasAttachment" type="uri" label="nga.hasAttachment.label" tooltip="nga.hasAttachment.tooltip" mandatory="false" multiValued="true" displayType="editable" order="8014" previewEmpty="false" uri="chc:hasAttachment" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:BusinessProcess</control-param>
					</control>
				</field>
				<field name="emf:hasWatcher" type="uri" label="nga.hasWatcher.label" tooltip="nga.hasWatcher.tooltip" mandatory="false" displayType="editable" order="8016" multiValued="true" previewEmpty="false" uri="emf:hasWatcher" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:User</control-param>
					</control>
				</field>
				<field name="hasThumbnail" type="uri" label="nga.hasThumbnail.label" tooltip="nga.hasThumbnail.tooltip" mandatory="false" displayType="readOnly" order="8018" previewEmpty="false" uri="emf:hasThumbnail" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Image</control-param>
					</control>
				</field>
				<field name="parentOf" type="uri" label="nga.parentOf.label" tooltip="nga.parentOf.tooltip" mandatory="false" displayType="readOnly" multiValued="true" order="8020" previewEmpty="false" uri="emf:parentOf" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:BusinessProcess</control-param>
					</control>
				</field>
				<field name="hasParent" type="uri" label="nga.hasParent.label" tooltip="nga.hasParent.tooltip" mandatory="false" displayType="readOnly" order="8022" previewEmpty="false" uri="emf:hasParent" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:BusinessProcess,emf:User</control-param>
					</control>
				</field>
				<field name="partOf" type="uri" label="nga.partOf.label" tooltip="nga.partOf.tooltip" mandatory="false" displayType="readOnly" order="8024" multiValued="true" previewEmpty="false" uri="ptop:partOf" >
					<control id="PICKER">
						<control-param id="range" name="range"></control-param>
					</control>
				</field>
				<field name="hasChild" type="uri" label="nga.hasChild.label" tooltip="nga.hasChild.tooltip" mandatory="false" displayType="readOnly" order="8026" multiValued="true" previewEmpty="false" uri="emf:hasChild" >
					<control id="PICKER">
						<control-param id="range" name="range"></control-param>
					</control>
				</field>
			</fields>
		</region>
	</regions>
	
	<transitions>
		<transition id="editDetails" order="10" />
		<transition id="addAttachment" order="16" label="nga.addAttachment.action.label" tooltip="nga.addAttachment.action.tooltip" eventId="addAttachment" purpose="addRelation" >
			<fields>
				<field name="attachToConfig" type="an10">
					<value>
						{
							"predefinedTypes" : ["emf:Project","chc:ConservationActivity","emf:BusinessProcess","emf:Document","emf:Media","emf:Task","chc:CulturalObject","emf:Image","emf:Audio","emf:Video","chc:Sample"],
							"selection" : "multiple",
							"relation" : ["chc:hasAttachment"],
							"implicitParams" : {
							"removeExisting" : false
							} 
						}
					</value>
					<control id="configuration" />
				</field>
			</fields>
		</transition>
		<!-- not used, only lable is change as the actions are visible in manage actions per roles -->
		<transition id="print" order="18" label="nga.print.label"/>
		<transition id="exportPDF" order="20" label="nga.exportPDF.label"/> 
		<transition id="exportWord" order="22" label="nga.exportWord.label"/>
		<!-- ************************************************************************************* -->
		<transition id="printTab" order="19" label="print.label" />
		<transition id="exportTabPDF" order="20" label="exportPDF.label" />
		<transition id="exportTabWord" order="24" label="exportWord.label" />		
		<transition id="move" order="26" />
		<transition id="lock" order="28" />
		<transition id="unlock" order="30" />
		<transition id="addWatchers" order="32" label="addWatchers.label" tooltip="addWatchers.tooltip" eventId="addWatchers" purpose="addRelation" >
			<fields>
				<field name="addAttachmentConfig" type="an10">
					<value>						
						{
							"predefinedTypes" : ["emf:User"],
							"selection" : "multiple",
							"relation" : ["emf:hasWatcher"],
							"implicitParams" : {
								"removeExisting" : false
							}
						}
					</value>
					<control id="configuration" />
				</field>
			</fields>
		</transition>
		<transition id="addThumbnail" order="34" />
		<transition id="saveAsTemplate" order="36" />			
		<transition id="managePermissions" order="38" />
		<transition id="delete" order="40" confirmation="deleteCS.confirm" />
	</transitions>
	
	<stateTransitions>				
		<stateTransition from="INIT" transition="create" to="DRAFT" />

		<stateTransition from="DRAFT" transition="editDetails" to="DRAFT" />
		<stateTransition from="DRAFT" transition="addAttachment" to="DRAFT" />
		<stateTransition from="DRAFT" transition="printTab" to="DRAFT" />
		<stateTransition from="DRAFT" transition="exportTabPDF" to="DRAFT" />
		<stateTransition from="DRAFT" transition="exportTabWord" to="DRAFT" />
		<stateTransition from="DRAFT" transition="move" to="DRAFT" />
		<stateTransition from="DRAFT" transition="lock" to="DRAFT" />
		<stateTransition from="DRAFT" transition="unlock" to="DRAFT" />
		<stateTransition from="DRAFT" transition="addWatcher" to="DRAFT" />
		<stateTransition from="DRAFT" transition="addThumbnail" to="DRAFT" />
        <stateTransition from="DRAFT" transition="saveAsTemplate" to="DRAFT" />
        <stateTransition from="DRAFT" transition="managePermissions" to="DRAFT" />
		<stateTransition from="DRAFT" transition="createInContext" to="DRAFT"/>

		<stateTransition from="DRAFT" transition="delete" to="DELETED" />
		
		<stateTransition from="*" transition="delete" to="DELETED" />
	</stateTransitions>
	
	<labels>
		<label id="HELP_TOOLTIP_HEADER">
			<value lang="en"><![CDATA[${eval(#{eval(
				<span class="thumbnail-content">
					<img class="thumbnail" src="${thumbnailUri(64)}" />
				</span>
				<span class="tooltip-data">
					<span class="tooltip-header">
						<a href="${link(currentInstance)}" class="instance-link" data-status="${get([status])}" data-id="${id.db}" data-uid="${id.uid}">
							<span data-title="${get([title])}">${get([title])}</span>
						</a>
					</span>
					<span class="tooltip-row">
                        <label>System modified by: </label>
                        <span data-property="modifiedBy">${user(${get([modifiedBy])})}</span>
                    </span>
					<span class="tooltip-row">
                        <label>System modified on: </label>
                        <span data-property="modifiedOn">${date([modifiedOn]).format(MM.dd.yyyy, HH:mm)}</span>
                    </span>
				</span>
			)})}]]></value>
		</label>		
		 <label id="HELP_DEFAULT_HEADER">
			<value lang="en"><![CDATA[${eval(
				${var.href= ${if(${get([emf:isDeleted])} == false).then(href="${link(currentInstance)}")}}
				${var.isVersion= ${if(${get([isVersion])} == true).then(true).else(false)}}
				<span ><img src="${thumbnailUri(64)}"/></span>
				<span>
					<span data-property="type">${CL([type])}</span>
					<br >
					<a ${var.href} class="instance-link ${if(${get([emf:isDeleted])} == true).then(instance-deleted).else(has-tooltip)}">
						${if(${get([emf:isDeleted])} == true).then(<span>(Deleted)</span>&nbsp;)}
						<span data-property="title">${get([title])}</span>
					</a>
					${if(${var.isVersion}).then(
						&nbsp;<span data-property="emf:version" class="object-version version badge">${get([emf:version])}</span>
					)}
					${if(${get([lockedBy])} <> null).then(<br /><span class="banner label label-warning">${label(lockedBy)}${user([lockedBy])}</span>)}
				</span>)}]]>
			</value>
		</label>
		<label id="HELP_COMPACT_HEADER">
			<value lang="en"><![CDATA[${eval(
				${var.href= ${if(${get([emf:isDeleted])} == false).then(href="${link(currentInstance)}")}}
				${var.isVersion= ${if(${get([isVersion])} == true).then(true).else(false)}}
				<span ><img src="${thumbnailUri(64)}"/></span>
				<span>
					<span data-property="type">${CL([type])}</span>:&nbsp;
					<a ${var.href} class="instance-link ${if(${get([emf:isDeleted])} == true).then(instance-deleted).else(has-tooltip)}">
						${if(${get([emf:isDeleted])} == true).then(<span>(Deleted)</span>&nbsp;)}
						<span data-property="title">${get([title])}</span>
					</a>
					${if(${var.isVersion}).then(
						&nbsp;<span data-property="emf:version" class="object-version version badge">${get([emf:version])}</span>
					)}
					${if(${get([lockedBy])} <> null).then(<br /><span class="banner label label-warning">${label(lockedBy)}${user([lockedBy])}</span>)}
				</span>)}]]>
			</value>
		</label>
	</labels>
</definition>
