<?xml version="1.0"?>
<definition id="groupDefinition" parentId="groupDefinitionBase" type="group">
	<fields>
		<field name="default_header" type="ANY" label="GROUP_DEFAULT_HEADER_NGA" />
        <field name="compact_header" type="an..4096" label="GROUP_COMPACT_HEADER_NGA" />
		<field name="tooltip_header" type="an..4096" label="GROUP_TOOLTIP_HEADER_NGA" />

		<field name="status" type="an..10" tooltip="nga.status.tooltip" codelist="CL12" />
	    <field name="createdOn" type="dateTime" label="groupDefinition.created-on" tooltip="nga.createdOn.tooltip" />
	    <field name="createdBy" 	type="uri" 	label="groupDefinition.created-from" tooltip="nga.createdBy.tooltip" >
	    	<control id="PICKER">
	    		<control-param id="range" name="range">emf:User</control-param>
	    	</control>
	    </field>	   
	    <field name="modifiedOn"  	type="dateTime" label="groupDefinition.modified-on" tooltip="nga.modifiedOn.tooltip" />
	    <field name="modifiedBy"    type="uri" 	label="groupDefinition.modified-from" tooltip="nga.modifiedBy.tooltip" >
	    	<control id="PICKER">
	    		<control-param id="range" name="range">emf:User</control-param>
	    	</control>
	    </field>
		
		<!-- system field -->
		<field name="parentOf" type="uri" displayType="system"/>
		<field name="title" type="an..100" displayType="system" />
		<field name="email" type="an..35" displayType="system" />
		<field name="hasParent" type="uri" displayType="system" />
		<field name="hasThumbnail" type="uri" displayType="system" />
		<field name="emf:version" type="an..10" displayType="system" />
		<field name="partOf" type="uri" displayType="system" />
		<field name="hasChild" type="uri" displayType="system" />		
	</fields>
	<regions>
		<region id="groupDetails" order="10" displayType="editable" label="nga.groupDetails.region.label" >
			<fields>
				<field name="title" type="an..100" order="100" displayType="readonly" label="ngaGroup.title.label" tooltip="nga.title.tooltip" uri="dcterms:title" />
				<field name="email" type="an..35" order="105" label="nga.email.label" tooltip="nga.email.tooltip" displayType="editable" uri="emf:email" />
			</fields>	
		</region>
		<region id="systemData" order="20" displayType="editable" label="nga.systemInformation.region.label">
			<fields>
				<field name="type" type="an..20" label="nga.type.label" tooltip="nga.type.tooltip" codelist="CL3" displayType="hidden" order="200" uri="emf:type" dmsType="FORBIDDEN">
					<value>group</value>
				</field>
				<field name="emf:version" type="an..10" order="201" label="object.version" displayType="hidden" dmsType="FORBIDDEN" uri="emf:version"/>
				<field name="hasMember" type="uri" displayType="readOnly" order="205" label="ngaGroup.hasMember.label" tooltip="ngaGroup.hasMember.tooltip" multiValued="true" previewEmpty="false" uri="ptop:hasMember" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:User</control-param>
					</control>
				</field>
				<!-- <field name="isSupervisorOf" type="uri" displayType="readOnly" order="210" label="nga.isSupervisorOf.label" tooltip="nga.isSupervisorOf.tooltip" multiValued="true" previewEmpty="false" uri="chc:isSupervisorOf" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Project,chc:ConservationActivity,emf:Task</control-param>
					</control>
				</field>
				<field name="involvedIn" type="uri" displayType="readOnly" order="215" label="ngaGroup.involvedIn.label" tooltip="ngaGroup.involvedIn.tooltip" multiValued="true" previewEmpty="false" uri="ptop:involvedIn" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Project,chc:ConservationActivity,emf:Task</control-param>
					</control>
				</field> -->
				<field name="parentOf" type="uri" displayType="readOnly" order="240"  label="nga.parentOf.label" tooltip="nga.parentOf.tooltip" multiValued="true" previewEmpty="false" uri="emf:parentOf" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity</control-param>
					</control>
				</field>
				<field name="partOf" type="uri" label="nga.partOf.label" tooltip="nga.partOf.tooltip" mandatory="false" displayType="readOnly" order="245" multiValued="true" previewEmpty="false" uri="ptop:partOf" >
					<control id="PICKER">
						<control-param id="range" name="range"></control-param>
					</control>
				</field>
				<field name="hasChild" type="uri" label="nga.hasChild.label" tooltip="nga.hasChild.tooltip" mandatory="false" displayType="readOnly" order="250" multiValued="true" previewEmpty="false" uri="emf:hasChild" >
					<control id="PICKER">
						<control-param id="range" name="range"></control-param>
					</control>
				</field>
			</fields>
		</region>
	</regions>

    <transitions>
		<transition id="editDetails" order="1" />
		<!-- not used, only lable is change as the actions are visible in manage actions per roles -->
		<transition id="print" order="18" label="nga.print.label"/>
		<transition id="exportPDF" order="20" label="nga.exportPDF.label"/> 
		<transition id="exportWord" order="22" label="nga.exportWord.label"/>
		<!-- ******************************************************************** -->
		<transition id="printTab" label="print.label" tooltip="printTab.tooltip" order="4" eventId="printTab" purpose="printTab" />
		<transition id="exportTabPDF" label="exportPDF.label" tooltip="exportTabPDF.tooltip" order="5" eventId="exportTabPDF" purpose="exportTabPDF" />
		<transition id="exportTabWord" label="exportWord.label" tooltip="exportTabWord.tooltip" order="8" eventId="exportTabWord" purpose="exportTabWord" />
		<transition id="lock" order="9" />
        <transition id="unlock" order="10" />
		<transition id="addThumbnail" order="11" />
		<transition id="saveAsTemplate" order="12" /> 
	</transitions>

	<stateTransitions>
		<stateTransition from="*" transition="create" to="ACTIVE"/>
		<stateTransition from="INIT" transition="synchronize" to="ACTIVE" />

		<stateTransition from="ACTIVE" transition="saveAsTemplate" to="ACTIVE"/>		           
        <stateTransition from="ACTIVE" transition="addThumbnail" to="ACTIVE" />
		<stateTransition from="ACTIVE" transition="lock" to="ACTIVE"/>
        <stateTransition from="ACTIVE" transition="unlock" to="ACTIVE"/>
		<stateTransition from="ACTIVE" transition="editDetails" to="ACTIVE"/>		
		<stateTransition from="ACTIVE" transition="printTab" to="ACTIVE"/>
		<stateTransition from="ACTIVE" transition="exportTabPDF" to="ACTIVE"/>
		<stateTransition from="ACTIVE" transition="exportTabWord" to="ACTIVE"/>
		
		<stateTransition from="ACTIVE" transition="delete" to="INACTIVE" />

		<stateTransition from="*" transition="delete" to="INACTIVE" />
	</stateTransitions>
	<labels>
		<label id="GROUP_TOOLTIP_HEADER_NGA">
			<value lang="en"><![CDATA[${eval(#{eval(
				<span class="thumbnail-content">
					<img class="thumbnail" src="${thumbnailUri(64)}" />
				</span>
				<span class="tooltip-data">
					<span class="tooltip-header">
						<a href="${link(currentInstance)}" class="instance-link" data-status="${get([status])}" data-id="${id.db}" data-uid="${id.uid}">
							<span data-title="${get([title])}">${get([title])}</span>
						</a>
					</span>
					${if(${get([email])}<>null).then(
						<span class="tooltip-row">
							<label>Email: </label>
							<span data-property="email">${get([email])}</span>
						</span>
					)}
				</span>
			)})}]]></value>
		</label>
		<label id="GROUP_DEFAULT_HEADER_NGA">
		  <value lang="en"><![CDATA[${eval(
		  ${var.isVersion= ${if(${get([isVersion])} == true).then(true).else(false)}}
		  <span><img src="${thumbnailUri(64)}"/></span>
			<span>
				<span class="truncate-element">
					<a class="instance-link has-tooltip" href="${userLink(currentInstance)}">
						<span data-property="title">${get([title])}</span>
					</a>
					${if(${var.isVersion}).then(
						&nbsp;<span data-property="emf:version" class="object-version version badge">${get([emf:version])}</span>
					)}
				</span> 
				${if(${get([lockedBy])} <> null).then(<br /><span class="banner label label-warning">${label(lockedBy)}${user([lockedBy])}</span>)}
			</span>)}]]></value>
		</label>
		<label id="GROUP_COMPACT_HEADER_NGA">
		   <value lang="en"><![CDATA[${eval(
		   ${var.isVersion= ${if(${get([isVersion])} == true).then(true).else(false)}}
			<span><img src="${thumbnailUri(16)}"/></span>
			<span>
				${if(${get([lockedBy])} <> null).then(<span class="lock-label"><i class="fa fa-lock fa-lg"></i></span>)} 
				<span class="truncate-element">
					<a class="instance-link has-tooltip" href="${userLink(currentInstance)}">
						<span data-property="title">${get([title])}</span>
					</a>
					${if(${var.isVersion}).then(
						&nbsp;<span data-property="emf:version" class="object-version version badge">${get([emf:version])}</span>
					)}
				</span>
				<br />
			</span>)}]]></value>
		</label>
	</labels>
</definition>
