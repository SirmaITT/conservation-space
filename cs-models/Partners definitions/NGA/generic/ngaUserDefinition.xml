		</field> 
		<field name="jobtitle" type="an..50" codelist="CL350" order="28" label="userDefinition.jobtitle" tooltip="ngaUser.jobtitle.tooltip" />
		<field name="language" type="an..50" codelist="CL13" order="30" label="userDefinition.language" tooltip="ngaUser.language.tooltip" >
			<value>en</value>
		</field>
		<field name="ownedBy" type="uri" label="ownedBy" displayType="system" >
			<control id="PICKER">
				<control-param id="range" name="range">emf:Project,emf:Case,emf:Document,emf:Task</control-param>
			</control>
		</field>
		
		<!-- system field -->
		<field name="emf:version" type="an..10" displayType="system" /> 	
		<field name="isAssigneeOf" type="uri" displayType="system" />
		<field name="hasThumbnail" type="uri" displayType="system" />
		<field name="parentOf" type="uri" displayType="system" />
		<field name="hasParent" type="uri" displayType="system" />
		<field name="partOf" type="uri" displayType="system" />
		<field name="hasChild" type="uri" displayType="system" />
	</fields>	
	<regions> 
		<region id="ngaUserRelationships" order="80" displayType="editable" label="nga.relationships.region.label">
			<fields>
				<field name="type" type="an..20" label="nga.type.label" tooltip="nga.type.tooltip" order="799" codelist="CL3" displayType="hidden" uri="emf:type" dmsType="FORBIDDEN" > 
					<value>user</value>
				</field>
				<field name="emf:version" type="an..10" order="201" label="object.version" displayType="hidden" dmsType="FORBIDDEN" uri="emf:version"/>
				<field name="isMemberOf" type="uri" label="ngaUser.isMemberOf.label" tooltip="ngaUser.isMemberOf.tooltip" mandatory="false" displayType="readOnly" order="800" multiValued="true" previewEmpty="false" uri="emf:isMemberOf" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Group</control-param>
					</control>
				</field>
				<field name="isAssigneeOf" type="uri" label="ngaUser.isAssigneeOf.label" tooltip="ngaUser.isAssigneeOf.tooltip" mandatory="false" displayType="readOnly" order="801" multiValued="true" previewEmpty="false" uri="emf:isAssigneeOf" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Project,chc:ConservationActivity,emf:Task</control-param>
					</control>
				</field>
				<field name="chc:isSupervisorOf" type="uri" label="nga.isSupervisorOf.label" tooltip="nga.isSupervisorOf.tooltip" mandatory="false" displayType="readOnly" order="802" multiValued="true" previewEmpty="false" uri="chc:isSupervisorOf" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Project,chc:ConservationActivity,emf:Task</control-param>
					</control>
				</field>
				<field name="chc:isAuthorOf" type="uri" label="ngaUser.authorOf.label" tooltip="ngaUser.isAuthorOf.tooltip" mandatory="false" displayType="readOnly" order="804" multiValued="true" previewEmpty="false" uri="chc:isAuthorOf" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document</control-param>
					</control>
				</field>
				<field name="ptop:involvedIn" type="uri" label="ngaUser.involvedIn.label" tooltip="ngaUser.involvedIn.tooltip" mandatory="false" displayType="readOnly" order="806" multiValued="true" previewEmpty="false" uri="ptop:involvedIn" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Project,chc:ConservationActivity,emf:Task</control-param>
					</control>
				</field>
				<field name="chc:hasApproved" type="uri" label="ngaUser.approvedBy.label" tooltip="ngaUser.hasApproved.tooltip" mandatory="false" displayType="readOnly" order="808" multiValued="true" previewEmpty="false" uri="chc:hasApproved" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document</control-param>
					</control>
				</field>
				<field name="emf:isWatcherOf" type="uri" label="ngaUser.isWatcherOf.label" tooltip="ngaUser.isWatcherOf.tooltip" mandatory="false" displayType="readOnly" order="810" multiValued="true" previewEmpty="false" uri="emf:isWatcherOf" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:User</control-param>
					</control>
				</field>
				<field name="hasThumbnail" type="uri" label="nga.hasThumbnail.label" tooltip="nga.hasThumbnail.tooltip" mandatory="false" displayType="readOnly" order="812" previewEmpty="false" uri="emf:hasThumbnail" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Image</control-param>
					</control>
				</field>
				<field name="parentOf" type="uri" label="nga.parentOf.label" tooltip="nga.parentOf.tooltip" mandatory="false" displayType="readOnly" order="814" multiValued="true" previewEmpty="false" uri="emf:parentOf" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:User</control-param>
					</control>
				</field>
				<field name="hasParent" type="uri" label="nga.hasParent.label" tooltip="nga.hasParent.tooltip" mandatory="false" displayType="readOnly" order="816" multiValued="true" previewEmpty="false" uri="emf:hasParent" dmsType="FORBIDDEN" >
					<control id="PICKER">
						<control-param id="range" name="range">emf:Document,emf:Audio,emf:Video,chc:CulturalObject,chc:Sample,emf:Image,emf:Task,emf:Project,chc:ConservationActivity,emf:User</control-param>
					</control>
				</field>
				<field name="partOf" type="uri" label="nga.partOf.label" tooltip="nga.partOf.tooltip" mandatory="false" displayType="readOnly" order="818" multiValued="true" previewEmpty="false" uri="ptop:partOf" >
					<control id="PICKER">
						<control-param id="range" name="range"></control-param>
					</control>
				</field>
				<field name="hasChild" type="uri" label="nga.hasChild.label" tooltip="nga.hasChild.tooltip" mandatory="false" displayType="readOnly" order="820" multiValued="true" previewEmpty="false" uri="emf:hasChild" >
					<control id="PICKER">
						<control-param id="range" name="range"></control-param>
					</control>
				</field>
			</fields>
		</region>
	</regions>
    <transitions>
		<transition id="editDetails" order="1" />
		<!-- not used, only lable is change as the actions are visible in manage actions per roles -->
		<transition id="print" order="18" label="nga.print.label"/>
		<transition id="exportPDF" order="20" label="nga.exportPDF.label"/> 
		<transition id="exportWord" order="22" label="nga.exportWord.label"/>
		<!-- ******************************************************************** -->
		<transition id="printTab" label="print.label" tooltip="printTab.tooltip" order="4" eventId="printTab" purpose="printTab" />
		<transition id="exportTabPDF" label="exportPDF.label" tooltip="exportTabPDF.tooltip" order="5" eventId="exportTabPDF" purpose="exportTabPDF" />
		<transition id="exportTabWord" label="exportWord.label" tooltip="exportTabWord.tooltip" order="8" eventId="exportTabWord" purpose="exportTabWord" />
		<transition id="unlock" order="9" />
		<transition id="addThumbnail" order="10" />
		<transition id="saveAsTemplate" order="11" /> 
	</transitions>

	<stateTransitions>
		<stateTransition from="*" transition="create" to="ACTIVE"/>
		<stateTransition from="INIT" transition="synchronize" to="ACTIVE" />

		<stateTransition from="ACTIVE" transition="editDetails" to="ACTIVE"/>
		<stateTransition from="ACTIVE" transition="saveAsTemplate" to="ACTIVE"/>		           
        <stateTransition from="ACTIVE" transition="addThumbnail" to="ACTIVE" />
        <stateTransition from="ACTIVE" transition="unlock" to="ACTIVE"/>
		<stateTransition from="ACTIVE" transition="printTab" to="ACTIVE"/>
		<stateTransition from="ACTIVE" transition="exportTabPDF" to="ACTIVE"/>
		<stateTransition from="ACTIVE" transition="exportTabWord" to="ACTIVE"/>
		<stateTransition from="ACTIVE" transition="createInContext" to="ACTIVE"/>
		<stateTransition from="INACTIVE" transition="activate" to="ACTIVE" />
		
		<stateTransition from="ACTIVE" transition="delete" to="DELETED" />
		<stateTransition from="ACTIVE" transition="deactivate" to="INACTIVE" />	
	
		<stateTransition from="INACTIVE" transition="delete" to="DELETED" />

		<stateTransition from="*" transition="delete" to="DELETED" />
	</stateTransitions>
	<labels>
		<label id="USER_TOOLTIP_HEADER_NGA">
			<value lang="en"><![CDATA[${eval(#{eval(
				<span class="thumbnail-content">
					<img class="thumbnail" src="${thumbnailUri(64)}" />
				</span>
				<span class="tooltip-data">
					<span class="tooltip-header">
						<a href="${link(currentInstance)}" class="instance-link" data-status="${get([status])}" data-id="${id.db}" data-uid="${id.uid}">
							<span data-title="${get([title])}">${get([title])}</span>
						</a>
					</span>
					${if(${get([country])}<>null).then(
						<span class="tooltip-row">
							<label>Country: </label>
							<span data-property="country">${get([country])}</span>
						</span>
					)}
					${if(${get([telephone])}<>null).then(
						<span class="tooltip-row">
							<label>Telephone: </label>
							<span data-property="telephone">${get([telephone])}</span>
						</span>
					)}
					${if(${get([mobile])}<>null).then(
						<span class="tooltip-row">
							<label>Mobile: </label>
							<span data-property="mobile">${get([mobile])}</span>
						</span>
					)}
					${if(${get([email])}<>null).then(
						<span class="tooltip-row">
							<label>Email: </label>
							<span data-property="mobile">${get([email])}</span>
						</span>
					)}
					${if(${get([organization])}<>null).then(
						<span class="tooltip-row">
							<label>Organization: </label>
							<span data-property="organization">${get([organization])}</span>
						</span>
					)}
					${if(${get([department])}<>null).then(
						<span class="tooltip-row">
							<label>Department: </label>
							<span data-property="department">${CL([department])}</span>
						</span>
					)}	
					${if(${get([jobtitle])}<>null).then(
						<span class="tooltip-row">
							<label>Job position: </label>
							<span data-property="jobtitle">${CL([jobtitle])}</span>
						</span>
					)}	
				</span>
			)})}]]></value>
		</label>
		<label id="USER_DEFAULT_HEADER_NGA">
            <value lang="en"><![CDATA[${eval(
				${var.jobtitle=${if(${CL([jobtitle])}<>null).then(true).else(false)}}
				${var.department=${if(${CL([department])}<>null).then(true).else(false)}}
				${var.isVersion= ${if(${get([isVersion])} == true).then(true).else(false)}}
                <span ><img src="${thumbnailUri(64)}"/></span>
                <span>
					${if(${CL([jobtitle])}<>null).then(<span data-property="jobtitle">${CL([jobtitle])}</span>)}
					${if(${and(${var.jobtitle} and ${var.department})}).then(<span>,&nbsp;</span>)}
					${if(${CL([department])}<>null).then(<span data-property="department">${CL([department])}</span>)}
					${if(${or(${var.jobtitle} or ${var.department})}).then(</br>)}
					<span class="truncate-element">
						<a class="instance-link has-tooltip" href="${userLink(currentInstance)}">
							<span data-property="title">${get([title])}</span>
						</a>
					</span>
					${if(${get([email])}<>null).then(,&nbsp;<span data-property="email">${get([email])}</span>)}
					${if(${var.isVersion}).then(
						&nbsp;<span data-property="emf:version" class="object-version version badge">${get([emf:version])}</span>
					)}
					${if(${get([lockedBy])} <> null).then(<br /><span class="banner label label-warning">${label(lockedBy)}${user([lockedBy])}</span>)}
				</span>)}]]>
			</value>
        </label>
		<label id="USER_COMPACT_HEADER_NGA">
			<value lang="en"><![CDATA[${eval(
				<span><img src="${thumbnailUri(16)}"/></span>
				<span>
					${if(${get([lockedBy])} <> null).then(<span class="lock-label"><i class="fa fa-lock fa-lg"></i></span>)}
					${var.isVersion= ${if(${get([isVersion])} == true).then(true).else(false)}}
					<span class="truncate-element">
						<a class="instance-link has-tooltip" href="${userLink(currentInstance)}">
							<span data-property="title">${get([title])}</span>
						</a>
						${if(${var.isVersion}).then(
							&nbsp;<span data-property="emf:version" class="object-version version badge">${get([emf:version])}</span>
						)}
					</span>
					<br />
				</span>)}]]>
			</value>
		</label>	
	</labels>
</definition>
