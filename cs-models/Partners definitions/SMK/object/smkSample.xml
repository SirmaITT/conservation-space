				<field name="title" type="an..180" mandatory="true" displayType="editable"  order="210" label="smk.title.label" tooltip="smk.title.tooltip" previewEmpty="false" dmsType="cm:title" uri="dcterms:title"/>			
				<field name="isTakenFrom" type="uri" displayType="editable" order="211" label="smk.isTakenFrom.label" tooltip="smk.isTakenFrom.tooltip" multiValued="true" previewEmpty="false" uri="chc:isTakenFrom" >
