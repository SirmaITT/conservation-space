				<field name="modifiedOn" type="datetime" displayType="readOnly" order="325"  label="smk.modifiedOn.label" tooltip="smk.modifiedOn.tooltip" previewEmpty="false" dmsType="-cm:modified"  uri="emf:modifiedOn"/>
				<field name="modifiedBy" type="uri" displayType="readOnly" order="330" label="smk.modifiedBy.label" tooltip="smk.modifiedBy.tooltip"  previewEmpty="false" dmsType="-cm:modifier" uri="emf:modifiedBy">
