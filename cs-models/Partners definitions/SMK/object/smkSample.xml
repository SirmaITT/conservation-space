				<field name="status" type="an..50"  displayType="readOnly" codelist="CL10" order="305" label="smk.status.label" tooltip="smk.status.tooltip"  previewEmpty="false" dmsType="emf:status" uri="emf:status" />
				<field name="emf:version" type="an..10" displayType="readOnly" order="310" label="smk.version.label" tooltip="smk.version.tooltip" dmsType="FORBIDDEN" uri="emf:version"/> 
				
