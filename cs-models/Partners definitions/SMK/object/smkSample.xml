				<field name="samplePhysicalLocation" type="an..1024" displayType="editable" order="235" label="smk.samplePhysicalLocation.label" tooltip="smk.samplePhysicalLocation.tooltip" previewEmpty="false" uri="smk:samplePhysicalLocation" />
